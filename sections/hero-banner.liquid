{% comment %}
  Hero Banner Section
  Main banner for the ebook store homepage
{% endcomment %}

<section class="enterprise-hero ebook-hero">
  <div class="container">
    <div class="hero-content">
      <h1 class="enterprise-hero-title fade-in-up">
        Discover Your Next Great Read
      </h1>
      <p class="hero-subtitle fade-in-up">
        Thousands of ebooks ready for instant download. Start reading in seconds.
      </p>
      <div class="hero-features fade-in-up">
        <div class="feature-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
            <polyline points="7 10 12 15 17 10"></polyline>
            <line x1="12" y1="15" x2="12" y2="3"></line>
          </svg>
          <span>Instant Download</span>
        </div>
        <div class="feature-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
            <line x1="8" y1="21" x2="16" y2="21"></line>
            <line x1="12" y1="17" x2="12" y2="21"></line>
          </svg>
          <span>All Devices</span>
        </div>
        <div class="feature-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
          </svg>
          <span>Secure Payment</span>
        </div>
      </div>
      <div class="hero-cta fade-in-up">
        <a href="/collections/all" class="enterprise-btn btn-primary">
          Browse All Ebooks
        </a>
        <a href="/collections/bestsellers" class="enterprise-btn btn-secondary">
          View Bestsellers
        </a>
      </div>
    </div>
    <div class="hero-illustration">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300" class="hero-svg">
        <g class="floating-book">
          <rect x="100" y="80" width="80" height="120" rx="4" fill="var(--enterprise-red)" opacity="0.9"/>
          <rect x="105" y="85" width="70" height="110" rx="2" fill="var(--enterprise-white)" opacity="0.1"/>
          <line x1="115" y1="100" x2="165" y2="100" stroke="var(--enterprise-white)" stroke-width="2" opacity="0.3"/>
          <line x1="115" y1="110" x2="165" y2="110" stroke="var(--enterprise-white)" stroke-width="2" opacity="0.3"/>
          <line x1="115" y1="120" x2="165" y2="120" stroke="var(--enterprise-white)" stroke-width="2" opacity="0.3"/>
        </g>
        <g class="floating-book" transform="translate(120, 20)">
          <rect x="100" y="80" width="80" height="120" rx="4" fill="var(--enterprise-accent)" opacity="0.8"/>
          <rect x="105" y="85" width="70" height="110" rx="2" fill="var(--enterprise-white)" opacity="0.1"/>
          <line x1="115" y1="100" x2="165" y2="100" stroke="var(--enterprise-white)" stroke-width="2" opacity="0.3"/>
          <line x1="115" y1="110" x2="165" y2="110" stroke="var(--enterprise-white)" stroke-width="2" opacity="0.3"/>
          <line x1="115" y1="120" x2="165" y2="120" stroke="var(--enterprise-white)" stroke-width="2" opacity="0.3"/>
        </g>
        <g class="floating-book" transform="translate(60, -30)">
          <rect x="100" y="80" width="80" height="120" rx="4" fill="var(--enterprise-dark-red)" opacity="0.7"/>
          <rect x="105" y="85" width="70" height="110" rx="2" fill="var(--enterprise-white)" opacity="0.1"/>
          <line x1="115" y1="100" x2="165" y2="100" stroke="var(--enterprise-white)" stroke-width="2" opacity="0.3"/>
          <line x1="115" y1="110" x2="165" y2="110" stroke="var(--enterprise-white)" stroke-width="2" opacity="0.3"/>
          <line x1="115" y1="120" x2="165" y2="120" stroke="var(--enterprise-white)" stroke-width="2" opacity="0.3"/>
        </g>
      </svg>
    </div>
  </div>
</section>

<style>
.floating-book {
  animation: floatBook 6s ease-in-out infinite;
  transform-origin: center;
}

.floating-book:nth-child(2) {
  animation-delay: 2s;
}

.floating-book:nth-child(3) {
  animation-delay: 4s;
}

@keyframes floatBook {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-20px) rotate(5deg);
  }
}
</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Hero Title",
      "default": "Discover Your Next Great Read"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Hero Subtitle",
      "default": "Thousands of ebooks ready for instant download. Start reading in seconds."
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
